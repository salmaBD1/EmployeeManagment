@model employeeManagemement.Models.Salle

@{
    ViewData["Title"] = "Edit";
}

<style>
    body {
        background-color: #f5f5f5; /* Light grey background color */
        color: #333333; /* Dark grey text color */
    }

    h1 {
        color: #ff69b4; /* Hot pink header text color */
    }

    h4 {
        color: #ff69b4; /* Hot pink subheader text color */
    }

    .form-group label {
        color: #ff69b4; /* Hot pink label text color */
    }

    .form-control {
        background-color: #ecf0f1; /* Light blue input background color */
        color: #2c3e50; /* Dark blue text color */
    }

    .btn-primary {
        background-color: #ff69b4; /* Hot pink button background color */
        border-color: #ff69b4; /* Hot pink button border color */
    }

        .btn-primary:hover {
            background-color: #e74c3c; /* Darker hot pink on hover */
            border-color: #e74c3c; /* Darker hot pink border on hover */
        }

    a {
        color: #ff69b4; /* Hot pink link color */
    }

        a:hover {
            color: #e74c3c; /* Darker hot pink link color on hover */
        }

    .text-danger {
        color: #ff69b4; /* Hot pink error message color */
    }
</style>

<h1>Edit Salle</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacite" class="control-label"></label>
                <input asp-for="Capacite" class="form-control" />
                <span asp-validation-for="Capacite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
