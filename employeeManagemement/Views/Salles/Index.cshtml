@model IEnumerable<employeeManagemement.Models.Salle>

@{
    ViewData["Title"] = "List of Salles";
}

<style>
    body {
        background-color: #ffffff; /* White background color */
        color: #ff69b4; /* Dark grey text color */
    }

    h1 {
        color: #3498db; /* Blue header text color */
    }

    a {
        color: #ff69b4; /* Hot pink link color */
    }

        a:hover {
            color: #ff69b4; /* Darker hot pink on hover */
        }

    .table {
        background-color: #3498db; /* White table background color */
        color: #ffffff; /* Dark grey text color */
    }

        .table th {
            background-color: #ff69b4; /* Blue table header background color */
            color: #ffffff; /* White table header text color */
        }

        .table td {
            background-color: #3498db; /* White table cell background color */
            color: #ffffff; /* Dark grey text color */
        }

    .btn-edit,
    .btn-details,
    .btn-delete {
        display: inline-block;
        padding: 5px 10px;
        margin: 2px;
        border: 1px solid #3498db; /* Blue border color */
        background-color: #ff69b4; /* Hot pink background color */
        color: #ffffff; /* White text color */
        text-decoration: none;
        border-radius: 3px;
    }

        .btn-edit:hover,
        .btn-details:hover,
        .btn-delete:hover {
            background-color: #3498db; /* Darker blue on hover */
            border-color: #e74c3c; /* Darker hot pink border on hover */
        }
</style>

<h1>List of Salles</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacite)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Numero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacite)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-edit">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn-details">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-delete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
