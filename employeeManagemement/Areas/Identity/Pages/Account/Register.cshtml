@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    body {
        background-color: #ffffff; /* White background color */
        color: #ff69b4; /* Hot pink text color */
    }

    h1 {
        color: #ff69b4; /* Hot pink header text color */
    }

    h2 {
        color: #ff69b4; /* Hot pink subtitle text color */
    }

    form {
        margin-top: 20px;
    }

    .form-floating {
        position: relative;
        margin-bottom: 1rem;
    }

    .form-control {
        border: 1px solid #ff69b4; /* Hot pink border color */
        border-radius: .25rem;
    }

    .form-select {
        border: 1px solid #ff69b4; /* Hot pink border color for select */
        border-radius: .25rem;
    }

    .form-label {
        position: absolute;
        top: 0;
        left: 0;
        padding: .375rem .75rem;
        color: #ff69b4; /* Hot pink label text color */
        pointer-events: none;
        transition: all .1s ease-in-out;
    }

    .form-control:focus + .form-label,
    .form-control:not(:placeholder-shown) + .form-label {
        font-size: 12px;
        transform: translate(0, -1.5rem);
        opacity: 0.5;
    }

    .btn-primary {
        background-color: #ff69b4; /* Hot pink button background color */
        color: #ffffff; /* White text color */
        border: 1px solid #ff69b4; /* Hot pink border color */
    }

        .btn-primary:hover {
            background-color: #e74c3c; /* Darker hot pink on hover */
            border-color: #e74c3c; /* Darker hot pink border on hover */
        }

    a {
        color: #ff69b4; /* Hot pink link color */
    }

        a:hover {
            color: #e74c3c; /* Darker hot pink on hover */
        }
</style>

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select" aria-required="true"></select>
                <option disabled selected>Select Role</option>
                <label asp-for="Input.Role"></label>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
