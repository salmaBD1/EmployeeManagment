@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    body {
        background-color: #ffffff; /* White background color */
        color: #ff69b4; /* Hot pink text color */
    }

    h1 {
        color: #ff69b4; /* Hot pink header text color */
    }

    h2 {
        color: #ff69b4; /* Hot pink subtitle text color */
    }

    form {
        margin-top: 20px;
    }

    .form-floating {
        position: relative;
        margin-bottom: 1rem;
    }

    .form-control {
        border: 1px solid #ff69b4; /* Hot pink border color */
        border-radius: .25rem;
    }

    .form-label {
        position: absolute;
        top: 0;
        left: 0;
        padding: .375rem .75rem;
        color: #ff69b4; /* Hot pink label text color */
        pointer-events: none;
        transition: all .1s ease-in-out;
    }

    .form-control:focus + .form-label,
    .form-control:not(:placeholder-shown) + .form-label {
        font-size: 12px;
        transform: translate(0, -1.5rem);
        opacity: 0.5;
    }

    .checkbox {
        color: #ff69b4; /* Hot pink checkbox label text color */
        margin-top: 10px;
    }

    .btn-primary {
        background-color: #ff69b4; /* Hot pink button background color */
        color: #ffffff; /* White text color */
        border: 1px solid #ff69b4; /* Hot pink border color */
    }

        .btn-primary:hover {
            background-color: #e74c3c; /* Darker hot pink on hover */
            border-color: #e74c3c; /* Darker hot pink border on hover */
        }

    a {
        color: #ff69b4; /* Hot pink link color */
    }

        a:hover {
            color: #e74c3c; /* Darker hot pink on hover */
        }
</style>

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2>Use a local account to log in.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
